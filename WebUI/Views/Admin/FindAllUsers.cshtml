@model IEnumerable<BLL.DomainModel.Entities.UserEntity>

@{
    ViewBag.Title = "FindAllUsers";
}

<h2>All Users</h2>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayName("Creation Date")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @Html.HiddenFor(modelItem => item.Id)
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.ActionLink("Files", "GetUserFiles", "File", new { userId = item.Id }, new { @class = "inline css-button css-orange" })
                <a class="inline css-button js-delete-button">Delete</a>
            </td>
        </tr>
    }
</table>

@section styles
{
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/dialog.css")
}
@section Scripts {
    @Scripts.Render("~/Scripts/application/user.js")
    @Scripts.Render("~/bundles/user")
}

